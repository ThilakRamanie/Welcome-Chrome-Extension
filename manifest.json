{
    "name": "Welcome Tab",
    "description": "Extension for displaying welcome screen on every new tab you opened",
    "manifest_version": 3,
    "version": "1.0.0",
    "icons": {
        "16": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "32": "icon.png"
        },
        "default_title": "Open new tab"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage"
    ]
}